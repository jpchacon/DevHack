<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/tools"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview"
        android:orientation="vertical"
        android:background="#212121">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa:"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tvEmpresa"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El lab coworking"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo:"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/tvCargo"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desarrollador Android"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tvFecha"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
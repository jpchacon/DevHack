<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/tools"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:id="@+id/cardViewWork">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBlackItem">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa:"
                android:layout_marginLeft="@dimen/marginleft_text_programs"/>

            <TextView
                android:id="@+id/tvEmpresaCard"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El lab coworking"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo:"
                android:layout_marginLeft="@dimen/marginleft_text_programs" />

            <TextView
                android:id="@+id/tvCargoCard"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desarrollador Android"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:layout_marginLeft="@dimen/marginleft_text_programs"/>


            <TextView
                android:id="@+id/tvCityCard"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cali" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work"
            android:layout_marginBottom="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:layout_marginLeft="@dimen/marginleft_text_programs"/>

            <TextView
                android:id="@+id/tvFechaCard"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-01-2018" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
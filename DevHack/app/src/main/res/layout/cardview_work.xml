<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    xmlns:cardview="http://schemas.android.com/tools"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview"
        android:orientation="vertical"
        android:background="@color/colorBlackItem">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa:"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tvEmpresaCard"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El lab coworking"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo:"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/tvCargoCard"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desarrollador Android"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margintop_cardview_work">

            <TextView
                android:id="@+id/tvTipoCard"
                style="@style/textViewCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:layout_marginLeft="20dp"/>

            <TextView
                style="@style/textViewInformationCardView"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:text="@string/separacion" />

            <TextView
                android:id="@+id/tvFechaCard"
                style="@style/textViewInformationCardView"
                android:layout_marginLeft="@dimen/marginleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
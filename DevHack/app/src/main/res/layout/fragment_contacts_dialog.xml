<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.devhack.presentation.view.dialog.ContactsDialog">

    <Button
        android:id="@+id/btnCloseContacts"
        android:layout_width="@dimen/size_icon_close"
        android:layout_height="@dimen/size_icon_close"
        android:layout_gravity="right"
        android:background="@drawable/icon_close"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margintop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admira_ini"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_zise_cardview"/>
        <TextView
            style="@style/textViewContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admira_fin"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_zise_cardview"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/margintop_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/marginLeft_layout_contacts">

        <ImageView
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:background="@drawable/icon_phone"
            />

        <TextView
            style="@style/textViewContacts"
            android:layout_marginLeft="@dimen/marginleft_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cell_phone_number" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margintop_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/marginLeft_layout_contacts">

        <ImageView
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:background="@drawable/icon_email"
            />

        <TextView
            style="@style/textViewContacts"
            android:layout_marginLeft="@dimen/marginleft_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/e_mail"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margintop_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/marginLeft_layout_contacts"
        android:layout_marginBottom="@dimen/layout_marginbottom_layout">

        <ImageView
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:background="@drawable/icon_maps"
            />

        <TextView
            style="@style/textViewContacts"
            android:layout_marginLeft="@dimen/marginleft_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"/>

    </LinearLayout>


</LinearLayout>

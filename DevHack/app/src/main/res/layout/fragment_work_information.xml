<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.devhack.presentation.view.fragments.WorkInformation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textViewInformationWork"
                android:textSize="@dimen/text_zise_title"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Work_offers"
                android:layout_marginTop="@dimen/margintop_layout"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margintop_informations">

                <TextView
                    style="@style/textViewInformationWork"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empresa:"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    style="@style/textViewInformationWork"
                    android:layout_marginLeft="@dimen/marginleft_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El lab coworking"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margintop_cardview_work">

                <TextView
                    style="@style/textViewInformationWork"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargo:"
                    android:layout_marginLeft="20dp" />

                <TextView
                    style="@style/textViewInformationWork"
                    android:layout_marginLeft="@dimen/marginleft_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desarrollador Android"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margintop_cardview_work">

                <TextView
                    style="@style/textViewInformationWork"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    style="@style/textViewInformationWork"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginleft_text"
                    android:text="@string/separacion" />

                <TextView
                    style="@style/textViewInformationWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginleft_text"
                    android:text="Fecha" />

            </LinearLayout>

            <TextView
                style="@style/textViewInformationWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:inputType="textMultiLine"
                android:textStyle="italic"
                android:layout_marginTop="@dimen/margintop_layout"
                android:layout_marginBottom="@dimen/margintop_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <Button
                style="@style/textViewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margintop_layout"
                android:text="Ver datos de contacto"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Este es el linear que hay que ocultar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margintop_cardview_work">

                    <TextView
                        style="@style/textViewInformationWork"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        style="@style/textViewInformationWork"
                        android:layout_marginLeft="@dimen/marginleft_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:text="Juan.gomez01@gmail.com"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margintop_cardview_work">

                    <TextView
                        style="@style/textViewInformationWork"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Celular:"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        style="@style/textViewInformationWork"
                        android:layout_marginLeft="@dimen/marginleft_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="317 444 655"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
